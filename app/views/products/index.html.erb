<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="product-tr">
        <td class="product-td title"><%= product.title %></td>
        <td class="product-td description"><%= product.description %></td>
        <td class="product-td"><%= image_tag product.image, style: "width: min(30vw, 200px)" %></td>
        <td class="product-td"><%= product.price %></td>
        <td class="product-td td-links"><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
